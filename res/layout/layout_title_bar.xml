<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip"
    android:background="@drawable/top"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5.0dp"
        android:src="@drawable/title_btn_back"
        android:textColor="#fff"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_bar_menu_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="3.0dip"
        android:gravity="center"
        android:src="@drawable/ic_top_bar_category"
        android:visibility="gone" />

    <!-- <ImageView -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="fill_parent" -->
    <!-- android:layout_marginLeft="5.0dp" -->
    <!-- android:layout_toRightOf="@id/title_back" -->
    <!-- android:background="@drawable/ic_top_divider" /> -->

    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/title_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="18.0dp"
        android:singleLine="true"
        android:text="编辑"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>