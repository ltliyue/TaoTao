			       android:layout_height="wrap_content"
			       android:src="@drawable/lines" 
			       />    
	    	<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="5dp">
			       <TextView
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="买家用户名："
			           android:textColor="#424952"
			           android:textSize="17dp"
			           android:layout_marginLeft="5dp" >
			        </TextView>
			        <TextView
			           android:id="@+id/yonghuming"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text=""
			           android:textColor="#424952"
			           android:textSize="17dp" 
			           android:layout_marginLeft="18dp">
			        </TextView>	
			        

			        
			</LinearLayout>
			<ImageView 
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:src="@drawable/lines" />
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="5dp">
			       <TextView
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="收货地："
			           android:textColor="#424952"
			           android:textSize="17dp"
			           android:layout_marginLeft="5dp" >
			        </TextView>
			        <TextView
			           android:id="@+id/dizhi"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text=""
			           android:textColor="#424952"
			           android:textSize="17dp" 
			           android:layout_marginLeft="52dp">
			        </TextView>	
			        		        
			</LinearLayout>
			<ImageView 
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:src="@drawable/lines" />
						<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="5dp">
			       <TextView
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="邮编："
			           android:textColor="#424952"
			           android:textSize="17dp"
			           android:layout_marginLeft="5dp" >
			        </TextView>
			        <TextView
			           android:id="@+id/youbian"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text=""
			           android:textColor="#424952"
			           android:textSize="17dp" 
			           android:layout_marginLeft="70dp">
			        </TextView>	
			        		        
			</LinearLayout>
			<ImageView 
			       android:layout_width="fill_parent"
			       android:layout_height="wrap_content"
			       android:src="@drawable/lines" />
						<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="5dp">
			       <TextView
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text="收货人："
			           android:textColor="#424952"
			           android:textSize="17dp"
			           android:layout_marginLeft="5dp" >
			        </TextView>
			        <TextView
			           android:id="@+id/shouhuoren"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:text=""
			           android:textColor="#424952"
